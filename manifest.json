{
  "name": "Close Discarded Tabs",
  "description": "Automatically close discarded/sleeping tabs",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["contextMenus"],
  "action": {
    "default_icon": {
      "16": "/images/clean16.png",
      "32": "/images/clean32.png",
      "64": "/images/clean64.png",
      "128": "/images/clean128.png"
    }
  },
  "icons": {
    "16": "/images/clean16.png",
    "32": "/images/clean32.png",
    "64": "/images/clean64.png",
    "128": "/images/clean128.png"
  }
}
